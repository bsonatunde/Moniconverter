{
  "name": "moniconverter",
  "version": "1.0.0",
  "description": "Moniconverter - A comprehensive PDF tools web application for converting, editing, and organizing PDF files",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js"
  },
  "keywords": [
    "pdf",
    "converter",
    "tools",
    "web-app",
    "react",
    "node"
  ],
  "author": "Bolaji Onatunde",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "docx": "^8.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hummus-recipe": "^1.6.0",
    "jimp": "^0.22.10",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.0.1",
    "pdfkit": "^0.13.0",
    "sharp": "^0.32.6",
    "tesseract.js": "^4.1.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "optionalDependencies": {
    "@img/sharp-linux-x64": "^0.32.6"
  }
}
